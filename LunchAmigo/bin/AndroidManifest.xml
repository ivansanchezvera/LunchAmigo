<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mingle.unimelb.lunchamigo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mingle.unimelb.lunchamigo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mingle.unimelb.lunchamigo.OptionGateway"
            android:label="@string/title_activity_option_gateway" >
        </activity>
        <activity
            android:name="mingle.unimelb.lunchamigo.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="mingle.unimelb.lunchamigo.InputTime"
            android:label="@string/title_activity_input_time" >
        </activity>
        <activity
            android:name="mingle.unimelb.lunchamigo.LunchInviteMessage"
            android:label="@string/title_activity_lunch_invite_message"
            android:parentActivityName="mingle.unimelb.lunchamigo.OptionGateway" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mingle.unimelb.lunchamigo.OptionGateway" />
        </activity>
    </application>

</manifest>
